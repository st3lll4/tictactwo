@page
@model WebApp.Pages.Config

@{
    ViewData["Title"] = "Configuration";
}

<div class="container-fluid p-5 bg-primary text-white text-center h-50" id="header">
    <h1>PICK A CONFIG</h1>
    <h5>And name your game</h5>
</div>

@if (Model.GameMode != "Bots")
{
    <a asp-page="/StartGame"
       asp-route-username="@Model.UserName"
       asp-route-gamemode="@Model.GameMode" class="btn btn-light">Go back
    </a>
}
else
{
    <a asp-page="/Index" class="btn btn-light">Go back</a>
}

<div class="wrapper">
    <form method="post" class="form-base regular-form">
        <div class="form-group">
            <select asp-for="ConfigurationName" class="form-select" asp-items="Model.ConfigSelectList"></select>
        </div>
        <div class="form-group">
            <input type="text" asp-for="SaveName" class="form-control"/>
            <span asp-validation-for="SaveName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="submit-button">START</button>
        </div>
    </form>
</div>
