<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Configuration[0].ConfigName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Configuration[0].Width)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Configuration[0].Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Configuration[0].Player1Symbol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Configuration[0].Player2Symbol)
