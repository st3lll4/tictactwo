@page
@model Username
@{
    ViewData["Title"] = "Username";
}

<div class="container-fluid p-5 bg-primary text-white text-center" id="header">
    <h1>WHO ARE YOU?</h1>
    <h5>Enter your username</h5>
</div>

<div class="wrapper">
    <form method="post" class="form-base regular-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input type="text" asp-for="UserName" class="form-control" style="width:10rem;"/>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="submit-button">LOG IN</button>
        </div>
    </form>
</div>   