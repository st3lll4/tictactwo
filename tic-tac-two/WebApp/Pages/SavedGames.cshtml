@page
@model WebApp.Pages.SavedGames

<div class="container-fluid p-5 bg-primary text-white text-center">
    <h1>PICK A SAVED GAME</h1>
</div>

@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger" role="alert">
        @Model.Error
    </div>
    <form method="post" asp-page-handler="Back">
        <button type="submit" class="btn btn-primary">Back</button>
    </form>
}


<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SelectedGame" class="control-label"></label>
                <select asp-for="SelectedGame" class="form-select" asp-items="Model.GameSelectList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>