@page
@model WebApp.Pages.SavedGames

<div class="container-fluid p-5 bg-primary text-white text-center" id="header">
    <h1>PICK A SAVED GAME</h1>
</div>

<div class="wrapper">
@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger" role="alert">
        @Model.Error
    </div>
    <form method="post" asp-page-handler="Back">
        <button type="submit" class="btn btn-primary">Back</button>
    </form>
}

    <div class="col-md-4">
        <form method="post" class="form-base regular-form">
            <div class="form-group">
                <select asp-for="SelectedGame" class="form-select" asp-items="Model.GameSelectList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Continue" class="submit-button"/>
            </div>
        </form>
    </div>
</div>