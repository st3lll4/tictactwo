@page
@model WebApp.Pages.SavedGames

<div class="container-fluid p-5 bg-primary text-white text-center h-50" id="header">
    <h1>PICK A SAVED GAME</h1>
</div>

<a asp-page="/StartGame"
   asp-route-username="@Model.UserName"
   asp-route-gamemode="@Model.GameMode" class="btn btn-light">Go back 
</a>

<div class="wrapper">
    @if (!string.IsNullOrWhiteSpace(Model.Error))
    {
        <div class="alert alert-danger" role="alert">
            @Model.Error
        </div>
    }
    <div class="col-md-4">
        <form method="post" class="form-base regular-form">
            <div class="form-group">
                <select asp-for="SelectedGame" class="form-select" asp-items="Model.GameSelectList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Continue" class="submit-button"/>
            </div>
        </form>
    </div>
</div>